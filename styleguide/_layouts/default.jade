doctype html
html(lang="en")
  head
    base(href="#{base}")

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    meta(name="description", content="")
    meta(name="author", content="")
    meta(name="format-detection", content="telephone=no")
    link(rel="icon", href="favicon.ico")

    title Zoolander Style Guide

    link(href="#{ css }", rel="stylesheet")
    link(href="css/main.css", rel="stylesheet")

  body.clear-navbar
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(
            type="button"
            data-toggle="collapse"
            data-target="#navbar"
            aria-expanded="false"
            aria-controls="navbar"
          )
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="") #{ public._data.index.title }
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false") Themes
                span.caret
              ul.dropdown-menu(role="menu")
                li: a(href="global") Global Base
                li: a(href="derek") Derek
            li: a(href="getting-started.html") Getting Started
            li: a(href="about.html") About

    block content

    a(href="https://github.com/rackerlabs/zoolander")
