<!-- Default description to allow for partial override to demonstrate really long text and equal height -->
<% if(!desc) { var desc = "This description cannot be longer than 75 characters including all spaces."; } %>
<!-- Infrastructure and Services Pattern -->

<a class="iasWidget iasWidget-hover" href="javascript:void(0)">
  <img class="iasWidget-img" src="https://placeholdit.imgix.net/~text?txtsize=30&txt=%5Bplaceholder%5D&w=200&h=150">
  <div class="iasWidget-row">
    <div class="iasWidget-col-full">
      <h3 class="iasWidget-header">Name with only 30 characters</h3>
      <p class="iasWidget-body"><%- desc %></p>
    </div>
    <div class="iasWidget-bottom">
      <p class="iasWidget-cta">More Info</p>
    </div>
  </div>
</a>
